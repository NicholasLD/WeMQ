<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mmanager.dao.MQTT.CustomerMapper">

    <!--增加客户-->
    <insert id="insertClient"
            parameterType="cn.mmanager.model.pojo.Customer">
        INSERT INTO mq_customer (name)
        VALUES (#{name})
    </insert>

    <!--删除客户-->
    <delete id="deleteClientById"
            parameterType="java.lang.Long">
        delete
        from mq_customer
        where id = #{id}
    </delete>

    <select id="getCustomerListByMap"
            resultType="cn.mmanager.model.pojo.Customer">
        SELECT * FROM
        `mq_customer`
        <trim prefix="where"
              prefixOverrides="and | or">
            <if test="name != null">
                name=#{name}
            </if>
            <if test="beginPos != null and pageSize != null">
                LIMIT
                #{beginPos},#{pageSize}
            </if>
        </trim>
    </select>
    <select id="getCustomerCount"
            resultType="java.lang.Integer">
        select count(1) from mq_customer
    </select>

    <!--修改客户-->
    <update id="updateClient"
            parameterType="cn.mmanager.model.pojo.Customer">
        UPDATE
        mq_customer
        <trim prefix="set"
              suffixOverrides=","
              suffix="where id=#{id}">
            <if test="name != null">
                name=#{name}
            </if>
        </trim>
    </update>
</mapper>
